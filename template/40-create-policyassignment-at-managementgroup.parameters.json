{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentParameters.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
      "input": {
        "value": {
          "Name": "victor",
          "DisplayName": "victor",
          "ParentId": "/providers/Microsoft.Management/managementGroups/d6ad82f3-42af-4a15-ac1e-49e6c08f624e",
          "Type": "/providers/Microsoft.Management/managementGroups",
          "Children": [
            {
              "Id": "/providers/Microsoft.Management/managementGroups/olivia",
              "Name": "olivia",
              "DisplayName": "olivia",
              "Type": "/providers/Microsoft.Management/managementGroups"
            }
          ],
          "properties": {
            "policyDefinitions": [
              {
                "Name": "ADINE-KeyVault",
                "ExtensionResourceType": "Microsoft.Authorization/policyDefinitions",
                "Properties": {
                  "displayName": "KeyVault",
                  "policyType": "Custom",
                  "mode": "All",
                  "description": "Ensures that management RG has Key Vault Deployed to manage platform secrets",
                  "parameters": {},
                  "policyRule": {
                    "if": {
                      "allOf": [
                        {
                          "field": "type",
                          "equals": "Microsoft.Resources/subscriptions"
                        }
                      ]
                    },
                    "then": {
                      "effect": "deployIfNotExists",
                      "details": {
                        "type": "Microsoft.KeyVault/vaults",
                        "deploymentScope": "Subscription",
                        "existenceScope": "Subscription",
                        "roleDefinitionIds": [
                          "/providers/Microsoft.Authorization/roleDefinitions/8e3af657-a8ff-443c-a75c-2fe8c4bcb635"
                        ],
                        "existenceCondition": {
                          "allOf": [
                            {
                              "field": "type",
                              "equals": "Microsoft.KeyVault/vaults"
                            },
                            {
                              "field": "name",
                              "like": "[concat(subscription().displayName, '-keyvault')]"
                            }
                          ]
                        },
                        "deployment": {
                          "location": "northeurope",
                          "properties": {
                            "mode": "incremental",
                            "parameters": {},
                            "template": {
                              "$schema": "http://schema.management.azure.com/schemas/2018-05-01/subscriptionDeploymentTemplate.json",
                              "contentVersion": "1.0.0.0",
                              "parameters": {},
                              "variables": {},
                              "resources": [
                                {
                                  "type": "Microsoft.Resources/resourceGroups",
                                  "apiVersion": "2018-05-01",
                                  "name": "[concat(subscription().displayName, '-keyvault')]",
                                  "location": "[deployment().location]",
                                  "properties": {}
                                }
                              ],
                              "outputs": {}
                            }
                          }
                        }
                      }
                    }
                  }
                }
              }
            ],
            "policyAssignments": [
              {
                "Name": "AADINE-KeyVault",
                "Type": "Microsoft.Authorization/policyAssignments",
                "ResourceType": "Microsoft.Authorization/policyAssignments",
                "Properties": {
                  "displayName": "AADINE-KeyVault",
                  "policyDefinitionId": "/providers/Microsoft.Management/managementGroups/victor/providers/Microsoft.Authorization/policyDefinitions/ADINE-KeyVault",
                  "scope": "/providers/Microsoft.Management/managementGroups/victor",
                  "notScopes": [],
                  "parameters": {}
                }
              }
            ]
          }
        }
      }
    }
  }