{
    "$schema": "https://schema.management.azure.com/schemas/2019-08-01/managementGroupDeploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "topLevelManagementGroupPrefix": {
            "type": "string"
        },
        "corpConnectedLzSubscriptionId": {
            "type": "array",
            "defaultValue": []
        },
        "connectivitySubscriptionId": {
            "type": "string"
        },
        "location": {
            "type": "string"
        }
    },
    "variables": {

        },
        "resources": [
            {
                "type": "Microsoft.Resources/deployments",
                "apiVersion": "2020-06-01",
                "name": "[concat(parameters('corpConnectedLzSubscriptionId')[copyIndex()].subs)]",
                "location": "[parameters('location')]",
                "copy": {
                    "name": "lzCorpConnectedCopy",
                    "count": "[if(not(empty(parameters('corpConnectedLzSubscriptionId'))), length(parameters('corpConnectedLzSubscriptionId')), 1)]"
                },
                "subscriptionId": "[if(not(empty(parameters('corpConnectedLzSubscriptionId'))), parameters('corpConnectedLzSubscriptionId')[copyIndex()].subs, '')]",
                "properties": {
                    "mode": "Incremental",
                    "expressionEvaluationOptions": {
                      "scope": "inner"
                    },
                    "parameters": {
                        "connSubId": {
                            "value": "[parameters('connectivitySubscriptionId')]"
                        },
                        "eslzPrefix": {
                            "value": "[parameters('topLevelManagementGroupPrefix')]"
                        },
                        "corpConnSubIds": {
                            "value": "[parameters('corpConnectedLzSubscriptionId')]"
                        },
                        "innerLocation": {
                            "value": "[parameters('location')]"
                        }
                    },
                    "template": {
                        "$schema": "https://schema.management.azure.com/schemas/2018-05-01/subscriptionDeploymentTemplate.json#",
                        "contentVersion": "1.0.0.0",
                        "parameters": {
                            "corpConnSubIds": {
                                "type": "array"
                            },
                            "eslzPrefix": {
                                "type": "string"
                            },
                            "connSubId": {
                                "type": "string"
                            },
                            "innerLocation": {
                                "type": "string"
                            }
                        },
                        "variables": {
                            "hubResourceId": "[concat('/subscriptions/', parameters('connSubId'), '/resourceGroups/', parameters('eslzPrefix'), '-connectivity', '/providers/Microsoft.Network/virtualNetworks/', parameters('eslzPrefix'), '-hub-', parameters('innerLocation'))]",
                            "vNetPolicyDefinition": "[concat('/providers/Microsoft.Management/managementGroups/', parameters('eslzPrefix'), '/providers/Microsoft.Authorization/policyDefinitions/Deploy-VNET-HubSpoke')]",
                            "vNetPolicyAssignment": "Deploy-vNet-to-hub"
                        },
                        "resources": [
                            {
                                "type": "Microsoft.Authorization/policyAssignments",
                                "apiVersion": "2019-06-01",
                                "name": "[concat(variables('vNetPolicyAssignment'), copyIndex())]",
                                "location": "[deployment().location]",
                                "copy": {
                                    "count": "[length(parameters('corpConnSubIds'))]",
                                    "name": "policyCopy"
                                },
                                "identity": {
                                    "type": "SystemAssigned"
                                },
                                "properties": {
                                    "description": "Connect-Vnet-to-hub",
                                    "displayName": "Connect-Vnet-to-hub",
                                    "policyDefinitionId": "[variables('vNetPolicyDefinition')]",
                                    "parameters": {                                        
                                        "vNetLocation": {
                                            "value": "[parameters('innerLocation')]"
                                        },
                                        "vNetName": {
                                            "value": "corp-vnet"
                                        },
                                        "vNetRgName": {
                                            "value": "corp-rg-vnet"
                                        },
                                        "vNetCidrRange": {
                                            "value": "[parameters('corpConnSubIds')[copyIndex()].addresses]"
                                        },
                                        "hubResourceId": {
                                            "value": "[variables('hubResourceId')]"
                                        }
                                    },
                                    "scope": "[subscription().id]"
                                }
                            },
                            {
                                // Invoke the template deployment from the policyDefinition using parameters from the policyAssignment
                                "type": "Microsoft.Resources/deployments",
                                "apiVersion": "2019-08-01",
                                "name": "[concat('invoke-', variables('vNetPolicyAssignment'), '-deployment', copyIndex())]",
                                "location": "[deployment().location]",
                                "dependsOn": [
                                    "policyCopy"
                                ],
                                "copy": {
                                    "name": "templateCopy",
                                    "count": "[length(parameters('corpConnSubIds'))]"
                                },
                                "properties": {
                                    "mode": "Incremental",
                                    "template": "[reference(variables('vNetPolicyDefinition'), '2018-05-01').policyRule.then.details.deployment.properties.template]",
                                    "parameters": "[if(not(empty(parameters('corpConnSubIds'))), reference(concat('/subscriptions/', parameters('corpConnSubIds')[copyIndex()].subs, '/providers/Microsoft.Authorization/policyAssignments/', variables('vNetPolicyAssignment'), copyIndex()), '2019-06-01').parameters, 'na')]"
                                }
                            }
                        ]
                    }
                }
            }
        ],
        "outputs": {/*
            "params": {
                "type": "array",
                "copy": {
                    "count": "[length(parameters('corpConnectedLzSubscriptionId'))]",
                    "input": "[reference(concat('/subscriptions/', parameters('corpConnectedLzSubscriptionId')[copyIndex()].subs, '/providers/Microsoft.Authorization/policyAssignments/', variables('vNetPolicyAssignment'), copyIndex()), '2018-05-01').parameters]"
                }
            },
            "template": {
                "type": "object",
                "value": "[reference(variables('vNetPolicyDefinition'), '2018-05-01').policyRule.then.details.deployment.properties.template]"
            }*/
        }
}